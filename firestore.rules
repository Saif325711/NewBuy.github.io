rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read for products
    match /products/{productId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Allow public read for all collections (temporary)
    match /{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}